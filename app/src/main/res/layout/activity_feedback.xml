<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- (1) 상단바 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_toolbar"
        app:title=""
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <!-- 툴바 내부의 로고 -->
        <ImageView
            android:id="@+id/toolbar_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/logo" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- (2) 본문: 스크롤 가능한 영역 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textSize="23sp"
                android:fontFamily="@font/gmarketlight"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textSize="80sp"
                android:fontFamily="@font/gmarketbold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"/>

            <TextView
                android:id="@+id/tvDisunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="킬로미터"
                android:textSize="22sp"
                android:fontFamily="@font/gmarketlight"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- 첫 번째 열: 시간 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textSize="22sp"
                        android:fontFamily="@font/gmarketmedium" />

                    <TextView
                        android:id="@+id/tvTimeunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:textSize="18sp"
                        android:fontFamily="@font/gmarketlight"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 두 번째 열: 페이스 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00 분/km"
                        android:textSize="22sp"
                        android:fontFamily="@font/gmarketmedium" />

                    <TextView
                        android:id="@+id/tvPaceunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="페이스"
                        android:textSize="18sp"
                        android:fontFamily="@font/gmarketlight"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- 세 번째 열: 고도 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvElevation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.2 m"
                        android:textSize="22sp"
                        android:fontFamily="@font/gmarketmedium" />

                    <TextView
                        android:id="@+id/tvElevationunit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="고도"
                        android:textSize="18sp"
                        android:fontFamily="@font/gmarketlight"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>


            <!-- 제목 -->
            <TextView
                android:id="@+id/tvFeedbackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="피드백 남기기"
                android:textSize="22sp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/gmarketlight"
                android:textStyle="bold"/>

            <!-- 웹뷰: 러닝 코스 정보/요약 표시 -->
            <WebView
                android:id="@+id/webviewFeedback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- (3) 로딩 인디케이터 -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- (4) 하단 네비게이션 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <!-- 첫 번째 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ic_challenge_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_challenge" />
        </LinearLayout>

        <!-- 세로 구분선 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <!-- 두 번째 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_running_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_running" />
        </LinearLayout>

        <!-- 세로 구분선 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <!-- 세 번째 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_record_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_record" />
        </LinearLayout>

        <!-- 세로 구분선 -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />

        <!-- 네 번째 버튼 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <ImageView
                android:id="@+id/nav_mypage_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mypage" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
